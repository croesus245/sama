# Production Environment Configuration for MWG Hostels Backend
# ⚠️ WARNING: Use strong, unique secrets in production

# Server Configuration
PORT=5001
NODE_ENV=production

# Database Configuration - USE PRODUCTION DATABASE CREDENTIALS
MONGODB_URI=mongodb+srv://USERNAME:STRONG_PASSWORD@cluster.mongodb.net/DATABASE_NAME

# JWT Configuration - GENERATE STRONG SECRETS (256+ bits)
JWT_SECRET=GENERATE_PRODUCTION_JWT_SECRET_HERE_MINIMUM_256_BITS
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=GENERATE_PRODUCTION_REFRESH_SECRET_HERE_MINIMUM_256_BITS
JWT_REFRESH_EXPIRE=30d

# Email Configuration - USE PRODUCTION EMAIL SERVICE
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USERNAME=YOUR_PRODUCTION_EMAIL
EMAIL_PASSWORD=YOUR_PRODUCTION_APP_PASSWORD
EMAIL_FROM=noreply@mwghostels.com

# Cloudinary Configuration - USE PRODUCTION CLOUDINARY ACCOUNT
CLOUDINARY_CLOUD_NAME=your_production_cloudinary_name
CLOUDINARY_API_KEY=your_production_api_key
CLOUDINARY_API_SECRET=your_production_api_secret

# Stripe Configuration - USE PRODUCTION STRIPE KEYS
STRIPE_SECRET_KEY=sk_live_YOUR_PRODUCTION_STRIPE_SECRET_KEY
STRIPE_PUBLISHABLE_KEY=pk_live_YOUR_PRODUCTION_STRIPE_PUBLISHABLE_KEY
STRIPE_WEBHOOK_SECRET=whsec_YOUR_PRODUCTION_WEBHOOK_SECRET

# University API Configuration
FUTA_API_URL=https://api.futa.edu.ng/students/verify
FUTA_API_KEY=YOUR_PRODUCTION_UNIVERSITY_API_KEY

# Security Configuration
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME=15

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf

# Admin Configuration
ADMIN_EMAIL=admin@mwghostels.com
ADMIN_PHONE=+234XXXXXXXXX

# SMS Configuration
SMS_API_KEY=YOUR_PRODUCTION_SMS_API_KEY
SMS_SENDER_ID=MWGHOSTELS

# Redis Configuration
REDIS_URL=redis://YOUR_PRODUCTION_REDIS_URL

# Google Maps Configuration
GOOGLE_MAPS_API_KEY=YOUR_PRODUCTION_GOOGLE_MAPS_API_KEY

# Social Media Integration
FACEBOOK_APP_ID=YOUR_PRODUCTION_FACEBOOK_APP_ID
GOOGLE_CLIENT_ID=YOUR_PRODUCTION_GOOGLE_CLIENT_ID