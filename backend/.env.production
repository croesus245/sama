# Production Environment Configuration for Backend Deployment

# Server Configuration
PORT=5000
NODE_ENV=production

# Database Configuration (MongoDB Atlas)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/mwg_hostels_prod

# JWT Configuration (Use strong secrets in production)
JWT_SECRET=mwg_hostels_production_jwt_secret_2025_very_secure_key_change_this
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=mwg_hostels_production_refresh_secret_2025_very_secure_change_this
JWT_REFRESH_EXPIRE=30d

# Email Configuration (Production SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USERNAME=support@mwghostels.com
EMAIL_PASSWORD=your_production_app_password
EMAIL_FROM=noreply@mwghostels.com

# Security Configuration
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME=15

# Rate Limiting (More restrictive for production)
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=50

# File Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf

# Admin Configuration
ADMIN_EMAIL=admin@mwghostels.com
ADMIN_PHONE=+234XXXXXXXXX

# CORS Origins (Production domains)
CORS_ORIGIN=https://sama-ruddy.vercel.app,https://mwghostels.com